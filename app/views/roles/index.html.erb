<h1>Listing roles</h1>

<table>
  <th>
    <td>Name</td>
    <td>Description</td>
    <td colspan="2">Action</td>
  </th>

<% for role in @roles %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.description %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

