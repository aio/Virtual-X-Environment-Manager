<% form_for(@role) do |f| %>
<%= f.error_messages %>

<table>
  <tr>
    <td>Name</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
    <td>Privileges</td>
    <td><%= swapselect :role, @role, :privileges, Privilege.all.collect {|p| [p.name, p.id] } %></td>
  </tr>
  <%= f.submit "Save" %>
</table>
<% end %>
